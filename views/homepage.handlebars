<div class="row mt-4">
    <div class="col-md-6">
        <form>
            <div class="row mb-2">
                <div class="col-md-6 campaign-list">
                    {{#each posts as |post|}}
                        <h4>{{post.content}}</h4>
                    {{/each}}
                </div> 
            </div>
            <div id="postsContainer">
            <textarea class="form-input" id="post-field" name="post-desc"></textarea>
            <button type="submit" class="btn btn-primary">Post</button>
        </form>  
    </div>
</div>    